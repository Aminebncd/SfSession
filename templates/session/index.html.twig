{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Liste des sessions</h1>

    {% if sessions %}

      {% for session in sessions %}
        

      <table>
        <thead>
          <tr>
            <th>{{ session }}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>du {{ session.dateDebutFR }} au {{ session.dateFinFR }}</td>
            <td>| {{ session.nombrePlaces }} places</td>
          </tr>
        </tbody>
      </table>
          {# {{ session }} <br>
          {{ session.dateDebutFR }} <br>
          {{ session.dateFinFR }} <br>
          {{ session.nombrePlaces }} places
         #}
      {% endfor %}
   
    {% else %}
      <p>Il semblerait qu'aucune session ne soit renseignée en base de données.</p>
    {% endif %}
</div>
{% endblock %}
