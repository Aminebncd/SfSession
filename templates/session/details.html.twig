{% extends 'base.html.twig' %}

{% block title %}Details de la session{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Details de la session</h1>

    {% if session %}

      <div>
        {{ session }} <br>
        Formation : {{ session.formation }} <br>
        Formateur référent : {{ session.formateur }} <br>
        du {{ session.dateDebutFR }} au {{ session.dateFinFR }} <br>
        {{ session.nombrePlaces }} place(s)
      </div>
      

      <div>
        <h2>Inscrits à cette session : </h2>
          <div>
            {% for inscrit in session.inscrits %}
              <p>
                {{ inscrit}} 
                <a href="{{ path('removeUser_session', {'session' : session.id, 'user' : inscrit.id}) }}">desinscrire</a>
              </p>
            {% endfor %}
          </div>
      </div>

      <div>
        <h2>Programme de cette session :</h2>
          <div>
            {% for programme in session.programmes %}
              <p>
                {{programme}}
              </p>
            {% endfor %}
          </div>

      </div>
      
      <div>
        <h2>stagiaires non inscrits :</h2>
          <div>
            {% for nonInscrit in nonInscrits %}
              <p>
                {{nonInscrit}} <a href="{{ path('addUser_session', {'session' : session.id, 'user' : nonInscrit.id}) }}">inscrire</a>
              </p>
              

              {# {{dump(session)}} 
              {{dump(nonInscrit)}}  #}
            {% endfor %}
          </div>
      </div>
     
    {% else %}
      <p>Il semblerait que cette session n'existe pas en base de données.</p>
    {% endif %}
</div>
{% endblock %}
