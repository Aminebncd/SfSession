{% extends 'base.html.twig' %}

{% block title %}Details de la session{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Details de la session</h1>

    {% if session %}

      <table>

        <thead>
            <tr>
              <th><h2>{{ session }}</h2></th>
            </tr>
        </thead>
        <tbody>
            <tr>
              <td>formation : {{ session.formation }}</td>
            </tr>
            <tr>
            <td> formateur référent : {{ session.formateur }}</td>
            </tr>
            <tr>
              <td>du {{ session.dateDebutFR }} au {{ session.dateFinFR }}</td>
            </tr>
            <tr>
              <td>{{ session.nombrePlaces }} places</td>
            </tr>
        </tbody>
      </table>

      <div>
        <h2>Inscrits à cette session :</h2>
        <div>
          {% for inscrit in session.inscrits %}
            <p>
              {{ inscrit}}
            </p>
          {% endfor %}
        </div>
      </div>

      <div>
        <h2>Programme de cette session :</h2>
        <div>
          {% for programme in session.programmes %}
            <p>
              {{programme}}
            </p>
          {% endfor %}
        </div>
      </div>
         
    {% else %}
      <p>Il semblerait que cette session n'existe pas en base de données.</p>
    {% endif %}
</div>
{% endblock %}
