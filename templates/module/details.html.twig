{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}

<div class="content">
  <h1> Liste des modules dans la categorie : {{categorie}}</h1>
     
  
      
      {% if modules %}
  
        {% for module in modules %}
        {{module}} <br>
        {% if is_granted('ROLE_ADMIN')  %}   
          <div class="action-links">

            <a href="{{ path('edit_module', {'id' : module.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
            <a href="{{ path('delete_module', {'id' : module.id}) }}"><i class="fa-solid fa-trash"></i></a><br> <br>
            </div>
            {% endif %}
        {% endfor %}
     
      {% else %}
        <p>Il semblerait qu'aucune session ne soit renseignée en base de données.</p>
      {% endif %}
</div>

{% endblock %}