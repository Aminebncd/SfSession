{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}

<div class="content">
  <h1> Liste des modules dans la categorie :  <br>
    {{categorie}} 
      {% if is_granted('ROLE_ADMIN')  %} 
            <a class="action" href="{{ path('edit_categorie', {'id' : categorie.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
            <a class="action" href="{{ path('delete_categorie', {'id' : categorie.id}) }}"><i class="fa-solid fa-trash"></i></a>
      {% endif %}
  </h1>
    

     
  
      
      {% if modules %}
      <div class="card modules">
        {% for module in modules %}
        <div class="module">
          <p>
            {{module}} 

            {% if is_granted('ROLE_ADMIN')  %}   
            <a class="action" href="{{ path('edit_module', {'id' : module.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
            <a class="action" href="{{ path('delete_module', {'id' : module.id}) }}"><i class="fa-solid fa-trash"></i></a>
          {% endif %}
          </p>
        </div>
        {% endfor %}
              
      </div>
     
      {% else %}
        <p>Il semblerait qu'aucun module ne soit présent en base de données.</p>
      {% endif %}
</div>

{% endblock %}