{% extends 'base.html.twig' %}

{% block title %}Ajoutez un nouveau module{% endblock %}

{% block body %}
<div class="content">
    {% if edit %}
        <h1>Editer un module existant</h1>
    {% else %}
        <h1>Ajoutez un nouveau module</h1>
    {% endif %}

    {{ form_start(formAddModule) }}
    
    <div class="card form-module">
        <div>
            {{form_row(formAddModule.intitule_module)}}          
        </div>
        <div>
            {{form_row(formAddModule.categorie)}}
        </div>
    </div>
        {{form_row(formAddModule.valider)}}

    {{ form_end(formAddModule) }}
</div>

{% endblock %}