{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}

<div class="example-wrapper">

    <h1>Liste des categories</h1>
    <a href="{{ path('new_categorie') }}">Ajouter une categorie</a> <br> <br>

    {% for categorie in categories %}

    <a href="{{ path('details_categorie', {'id': categorie.id}) }}">{{categorie}}</a> 
    <a href="{{ path('edit_categorie', {'id' : categorie.id}) }}">edit</a>
    <a href="{{ path('delete_categorie', {'id' : categorie.id}) }}">delete</a><br>
      
    {% endfor %}

    
</div>
{% endblock %}