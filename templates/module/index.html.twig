{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}

<div class="content">
    
    <h1>Liste des catégories</h1>
    
    <div class="category-list">
        {% for categorie in categories %}
            <div class="category">
                <a class="category-link" href="{{ path('details_categorie', {'id': categorie.id}) }}">{{ categorie }}</a>
                    {% if is_granted('ROLE_ADMIN')  %} 
                        <div class="category-actions">
                            <a class="action" href="{{ path('edit_categorie', {'id' : categorie.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a class="action" href="{{ path('delete_categorie', {'id' : categorie.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </div>
                        {% endif %}
            </div>
        {% endfor %}

    </div>
    <div class="card btn-actions">
        <a class="btn btn-secondary" href="{{ path('new_categorie') }}">Ajouter une catégorie</a><br>
        <a class="btn btn-secondary" href="{{ path('new_module') }}">Ajouter un module</a><br><br>
    </div>
</div>

{% endblock %}
