{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if is_granted('ROLE_ADMIN')  %}   
    <a href="{{ path('new_formation') }}">Ajouter une formation</a><br>
    <a href="{{ path('new_formateur') }}">Ajouter un formateur</a><br><br>
    {% endif %}

    {% if formations %}
    <h1>Liste des formations</h1>
        {% for formation in formations %}
        <a href="{{ path('details_formation', {'id': formation.id}) }}">{{formation}}</a><br>
          
        {% endfor %}
    {% endif %}


    {% if formateurs %}
    <h1>Liste des formateurs</h1>
        {% for formateur in formateurs %}
        <a href="{{ path('details_formateur', {'id': formateur.id}) }}">{{formateur}}</a><br>
        
        {% endfor %}
    {% endif %}
    
</div>
{% endblock %}
